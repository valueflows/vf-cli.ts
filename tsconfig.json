{
  "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "strict": true,
      "strictNullChecks": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "typeRoots": [
        "./@types"
      ]
  }
}
